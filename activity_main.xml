<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="149dp"
        android:layout_height="157dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="22dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="153dp"
        android:layout_height="157dp"
        android:layout_above="@+id/imageView1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="22dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="655dp"
        android:layout_toStartOf="@+id/menuButton"
        android:text="Blood Unity"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="144dp"
        android:layout_height="148dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="118dp" />

    <TextView
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="154dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text='Blood type "O+"        Allergic free and lactose intolereant'
        android:textSize="20sp" />

    <TextView
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="505dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text='Blood type "AB-"                No health issue. '
        android:textSize="20sp" />

    <TextView
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="319dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text='Blood type "B+"  Occasional smoker.  Consuming health pills'
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_above="@+id/editTextTextMultiLine2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="72dp"
        android:background="#00FFFFFF"
        android:scaleX="3"
        android:scaleY="4"
        app:srcCompat="@drawable/ic_action_menu" />


</RelativeLayout>